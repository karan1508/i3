[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

ime-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
